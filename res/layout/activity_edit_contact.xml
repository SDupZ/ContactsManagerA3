<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditContact" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		android:paddingLeft="3dp" >
        <ImageView
            android:id="@+id/edit_contact_image_view"
            android:layout_width="83dp"
            android:layout_height="118dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/edit_last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />

        </LinearLayout>

    </LinearLayout>
    
    <EditText
        android:id="@+id/edit_mobile_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="phone" />
    
    <EditText
        android:id="@+id/edit_home_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="phone" />
    
    <EditText
        android:id="@+id/edit_work_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="phone" />
    
    <EditText
        android:id="@+id/edit_email_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="textEmailAddress" />
    
    <EditText
        android:id="@+id/edit_addressline1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" />
    
    <EditText
        android:id="@+id/edit_addressline2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" />
    
    <EditText
        android:id="@+id/edit_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" />
    
    <EditText
        android:id="@+id/edit_country"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" />
    
    <EditText
        android:id="@+id/edit_dateofbirth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="date" />

</LinearLayout>
