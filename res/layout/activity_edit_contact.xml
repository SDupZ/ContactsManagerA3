<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditContact" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		android:paddingLeft="3dp" >
        <ImageView
            android:id="@+id/edit_contact_image_view"
            android:layout_width="83dp"
            android:layout_height="118dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_first_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" 
                android:hint="@string/first_name_hint"/>

            <EditText
                android:id="@+id/edit_last_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" 
                android:hint="@string/last_name_hint"/>

        </LinearLayout>

    </LinearLayout>
    
    <EditText
        android:id="@+id/edit_mobile_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="phone" 
	    android:hint="@string/mobile_phone_hint"
	    />    	
    
    <EditText
        android:id="@+id/edit_home_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="phone" 
	    android:hint="@string/home_phone_hint"/>
    
    <EditText
        android:id="@+id/edit_work_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="phone" 
	    android:hint="@string/work_phone_hint"/>
    
    <EditText
        android:id="@+id/edit_email_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="textEmailAddress" 
	    android:hint="@string/email_address_hint"/>
    
    <EditText
        android:id="@+id/edit_addressline1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" 
	    android:hint="@string/address_line_1_hint"/>
    
    <EditText
        android:id="@+id/edit_addressline2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" 
	    android:hint="@string/address_line_2_hint"/>
    
    <EditText
        android:id="@+id/edit_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" 
	    android:hint="@string/city_hint"/>
    
    <EditText
        android:id="@+id/edit_country"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="text" 
	    android:hint="@string/country_hint"/>
    
    <EditText
        android:id="@+id/edit_dateofbirth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"	    
	    android:inputType="date" 
	    android:hint="@string/date_of_birth_hint"/>

</LinearLayout>
